// quarta_questao
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

struct aluno {
    char nome[20];
    char endereco[100];
    float nota;
};

float calcula_media(struct aluno alunos[], int tamanho) {
    float soma = 0.0;
    for (int i = 0; i < tamanho; i++) {
        soma += alunos[i].nota;
    }
    return soma / tamanho;
}

int main() {
    struct aluno alunos[5];
    
    for (int i = 0; i < 5; i++) {
        printf("\nAluno %d", i+1);
        printf("\nInforme o nome do aluno: ");
        fgets(alunos[i].nome, sizeof(alunos[i].nome), stdin);
        
        printf("Informe o endereço do aluno: ");
        fgets(alunos[i].endereco, sizeof(alunos[i].endereco), stdin);
        
        printf("Informe a nota do aluno: ");
        scanf("%f", &alunos[i].nota);
        getchar();
        printf("\n---------------------------");
    }
    
    printf("\nDADOS DOS ALUNOS\n");
    for (int i = 0; i < 5; i++) {
        printf("Aluno %d:\n", i + 1);
        printf("Nome: %s", alunos[i].nome);
        printf("Nota: %.1f\n", alunos[i].nota);
        printf("Endereço: %s", alunos[i].endereco);
        printf("\n");
    }
    
    printf("\nMédia das notas: %.1f\n", calcula_media(alunos, 5));
    
    return 0;
}

//quinta_questao
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

struct aluno {
    char nome[20];
    char endereco[100];
    float nota;
};

float calcula_media(struct aluno alunos[], int tamanho) {
    float soma = 0.0;
    for (int i = 0; i < tamanho; i++) {
        soma += alunos[i].nota;
    }
    return soma / tamanho;
}

float maior_nota(struct aluno alunos[], int tamanho) {
    float maiorNota = alunos[0].nota;
    for (int i = 0; i < tamanho; i++){
        if (alunos[i].nota > maiorNota){
            maiorNota = alunos[i].nota;
        }
    }
    return maiorNota;
}
int main() {
    struct aluno alunos[5];
    
    for (int i = 0; i < 5; i++) {
        printf("\nAluno %d", i+1);
        printf("\nInforme o nome do aluno: ");
        fgets(alunos[i].nome, sizeof(alunos[i].nome), stdin);
        
        printf("Informe o endereço do aluno: ");
        fgets(alunos[i].endereco, sizeof(alunos[i].endereco), stdin);
        
        printf("Informe a nota do aluno: ");
        scanf("%f", &alunos[i].nota);
        getchar();
        printf("\n---------------------------");
    }
    
    printf("\nDADOS DOS ALUNOS\n");
    for (int i = 0; i < 5; i++) {
        printf("Aluno %d:\n", i + 1);
        printf("Nome: %s", alunos[i].nome);
        printf("Nota: %.1f\n", alunos[i].nota);
        printf("Endereço: %s", alunos[i].endereco);
        printf("\n");
    }
    
    printf("\nMédia das notas: %.1f", calcula_media(alunos, 5));
    printf("\nMaior nota: %.1f\n", maior_nota(alunos, 5));
    
    return 0;
}

//sexta_questao
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

struct aluno {
    char nome[20];
    char endereco[100];
    float nota;
};

float calcula_media(struct aluno alunos[], int tamanho) {
    float soma = 0.0;
    for (int i = 0; i < tamanho; i++) {
        soma += alunos[i].nota;
    }
    return soma / tamanho;
}

float maior_nota(struct aluno alunos[], int tamanho) {
    float maiorNota = alunos[0].nota;
    for (int i = 0; i < tamanho; i++){
        if (alunos[i].nota > maiorNota){
            maiorNota = alunos[i].nota;
        }
    }
    return maiorNota;
}

float computa_reprovados(struct aluno alunos[], int tamanho){
    int reprovados = 0;
    for (int i = 0; i < tamanho; i++){
        if (alunos[i].nota < 6){
            reprovados++;
        }
    }
    return reprovados;
}
int main() {
    struct aluno alunos[5];
    
    for (int i = 0; i < 5; i++) {
        printf("\nAluno %d", i+1);
        printf("\nInforme o nome do aluno: ");
        fgets(alunos[i].nome, sizeof(alunos[i].nome), stdin);
        
        printf("Informe o endereço do aluno: ");
        fgets(alunos[i].endereco, sizeof(alunos[i].endereco), stdin);
        
        printf("Informe a nota do aluno: ");
        scanf("%f", &alunos[i].nota);
        getchar();
        printf("\n---------------------------");
    }
    
    printf("\nDADOS DOS ALUNOS\n");
    for (int i = 0; i < 5; i++) {
        printf("Aluno %d:\n", i + 1);
        printf("Nome: %s", alunos[i].nome);
        printf("Nota: %.1f\n", alunos[i].nota);
        printf("Endereço: %s", alunos[i].endereco);
        printf("\n");
    }
    
    printf("\nMédia das notas: %.1f", calcula_media(alunos, 5));
    printf("\nMaior nota: %.1f", maior_nota(alunos, 5));
    printf("\nNúmero de reprovados: %.0f\n", computa_reprovados(alunos, 5));
    
    return 0;
}

//setima_questao
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

#define numAlunos 5

struct aluno {
    char nome[20];
    char endereco[100];
    float nota;
};

float calcula_media(struct aluno alunos[], int tamanho) {
    float soma = 0.0;
    for (int i = 0; i < tamanho; i++) {
        soma += alunos[i].nota;
    }
    return soma / tamanho;
}

float maior_nota(struct aluno alunos[], int tamanho) {
    float maiorNota = alunos[0].nota;
    for (int i = 0; i < tamanho; i++){
        if (alunos[i].nota > maiorNota){
            maiorNota = alunos[i].nota;
        }
    }
    return maiorNota;
}

float computa_reprovados(struct aluno alunos[], int tamanho){
    int reprovados = 0;
    for (int i = 0; i < tamanho; i++){
        if (alunos[i].nota < 6){
            reprovados++;
        }
    }
    return reprovados;
}
int main() {
    struct aluno alunos[numAlunos];
    
    for (int i = 0; i < numAlunos; i++) {
        printf("\nAluno %d", i+1);
        printf("\nInforme o nome do aluno: ");
        fgets(alunos[i].nome, sizeof(alunos[i].nome), stdin);
        
        printf("Informe o endereço do aluno: ");
        fgets(alunos[i].endereco, sizeof(alunos[i].endereco), stdin);
        
        printf("Informe a nota do aluno: ");
        scanf("%f", &alunos[i].nota);
        while (getchar() != '\n');
        printf("\n---------------------------");
    }
    
    printf("\nDADOS DOS ALUNOS\n");
    for (int i = 0; i < numAlunos; i++) {
        printf("Aluno %d:\n", i + 1);
        printf("Nome: %s", alunos[i].nome);
        printf("Nota: %.1f\n", alunos[i].nota);
        printf("Endereço: %s", alunos[i].endereco);
        printf("\n");
    }
    
    printf("\nMédia das notas: %.1f", calcula_media(alunos, numAlunos));
    printf("\nMaior nota: %.1f", maior_nota(alunos, numAlunos));
    printf("\nNúmero de reprovados: %.0f\n", computa_reprovados(alunos, numAlunos));
    
    return 0;
}
